<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeterTours.Views.step5foto">
    <ContentPage.Content>
        <Grid BackgroundColor="#fffafafa">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" Padding="0">
                    <ImageButton  Source="flechaatras.png" WidthRequest="60" HorizontalOptions="Start" HeightRequest="60" Margin="30,60,0,0" Clicked="Back_Click" BackgroundColor="Transparent"/>
                </StackLayout>
                <StackLayout Grid.Row="1" Padding="10,0,10,0">
                    <Label x:Name="lblTitulo" Text="Datos de la Cuenta" HorizontalOptions="Center" TextColor="CornflowerBlue" FontSize="Large" Margin="0,0" FontAttributes="Bold" Padding="40,30,40,0"></Label>
                    <StackLayout Orientation="Horizontal" Padding="20,25,20,0">
                        <Label Text="Nombres: " FontSize="Medium"/>
                        <Label x:Name="txtNombres" Text="" FontSize="Medium"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="20,5,20,0">
                        <Label Text="Nº de teléfono: " FontSize="Medium"/>
                        <Label x:Name="txtTelf" Text="" FontSize="Medium"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="20,5,20,0">
                        <Label Text="Identificación: " FontSize="Medium"/>
                        <Label x:Name="txtIdenti" Text="" FontSize="Medium"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="20,5,20,0">
                        <Label Text="Email: " FontSize="Medium"/>
                        <Label x:Name="txtEmail" Text="" FontSize="Medium"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout Grid.Row="2" Padding="40,50,40,0" HorizontalOptions="Center">
                    <StackLayout Orientation="Horizontal">
                        <Button Text="Finalizar" BackgroundColor="#ff9200" TextColor="White" CornerRadius="10" Clicked="Next_Click" ></Button>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
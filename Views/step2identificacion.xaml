<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeterTours.Views.step2identificacion">
    <ContentPage.Content>
        <Grid BackgroundColor="#fffafafa">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <ImageButton  Source="flechaatras.png" WidthRequest="60" HorizontalOptions="Start" HeightRequest="60" Margin="30,60,0,0" Clicked="Back_Click" BackgroundColor="Transparent"/>
                <StackLayout Grid.Row="1" Padding="50,50">

                    <StackLayout Orientation="Vertical">
                        <Label Text="Ingrese su Cédula" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Margin="0,30" FontAttributes="Bold"></Label>
                        <Entry x:Name="txtCedula" Placeholder="Cédula" PlaceholderColor="gray" TextColor="black" Keyboard="Numeric" MaxLength="10" />
                        <Label x:Name="LabelError" TextColor="Red"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout Grid.Row="2" Padding="50,100">
                    <StackLayout Orientation="Horizontal">
                        <ImageButton  Source="flechaadelante.png" WidthRequest="60" HorizontalOptions="EndAndExpand" HeightRequest="60" Clicked="Next_Click" BackgroundColor="Transparent"/>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
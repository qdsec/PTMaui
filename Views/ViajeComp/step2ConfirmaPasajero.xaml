<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeterTours.Views.ViajeComp.step2ConfirmaPasajero">
    <ContentPage.Content>
        <ScrollView x:Name="scroll">
            <StackLayout BackgroundColor="#fffafafa">
                <Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <StackLayout Grid.Row="1" Padding="10">
                            <Label Text="Detalle del viaje" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Margin="0,0" FontAttributes="Bold"></Label>

                            <StackLayout Orientation="Vertical" Padding="40,20,40,0">
                                <Label Text="Si es usted quien viaje presione Continuar" FontSize="Medium" />
                                <Button x:Name="btnContinuar"  Text="Continuar"  CornerRadius="20" Clicked="btnContinuar_Clicked"></Button>
                            </StackLayout>
                            <StackLayout Orientation="Vertical" Padding="40,20,40,0">
                                <Label Text="Si desea agendar para otra persona presione ingresar datos del pasajero " FontSize="Medium"  />
                                <Button x:Name="btnAgregarPasajero"  Text="Ingresar datos del pasajero"  CornerRadius="20" Clicked="btnAgregarPasajero_Clicked" ></Button>
                            </StackLayout>

                        </StackLayout>
                    </Grid>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>